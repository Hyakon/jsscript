
<h2><%= email.object %></h2>
<p><%= email.body %></p>

<%= button_to 'Supprimer', email, method: :delete, remote: true %>
<% if email.read %>
  <%= button_to 'Marquer comme Non-Lu', email, method: :put, remote: true  , class:'read'%>
<% else %>
  <%= button_to 'Marquer Lu', email, method: :put, remote: true , class:'read'%>
<% end %>